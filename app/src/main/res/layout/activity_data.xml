<?xml version="1.0" encoding="utf-8"?>
<!--
Name: activity_data.xml
Version: 1.0
Author: Alex Ho
Date: 2024-04-02
Description: Defines the layout for data activity for a logged-in user to view a pie chart data visualization of
their personal inventory table. Utilizes MPAndroidChart - https://weeklycoding.com/mpandroidchart/
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Back button to return to main activity -->
    <Button
        android:id="@+id/buttonBackData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:text="Back" />

    <!-- Pie chart -->
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>